{
  /** HOW TO USE THIS SETTINGS FILE
  *   Step 1. Update {PATH TO WPILIB} with your WPILIB home
  *     On Windows: "C:\\Users\\Public\\.wpilib" (verify)
  *     On Linux: "/home/username/wpilib" (verify)
  *     On Mac: "/Users/username/wpilib" (verify)
  *   Step 2. Replace settings.json in your WPILIB User Data directory
  *   Step 3. Restart VSCode
  */

  // Breadcrumbs settings: Configures breadcrumb navigation.
  "breadcrumbs.enabled": true,

  // CSS linting settings: Configures linting for CSS files.
  "css.lint.duplicateProperties": "warning",
  "css.lint.float": "warning",
  "css.lint.important": "warning",

  // Debug settings: Configures the debugging experience.
  "debug.inlineValues": true,
  "debug.internalConsoleOptions": "neverOpen",
  "debug.openDebug": "neverOpen",
  "debug.showInStatusBar": "always",

  // Diff editor settings: Configures the diff editor.
  "diffEditor.codeLens": true,
  "diffEditor.experimental.showMoves": true,

  // Editor settings: General editor configurations.
  "editor.acceptSuggestionOnEnter": "off",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.autoIndent": "advanced",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "block-outline",
  "editor.detectIndentation": false,
  "editor.fontFamily": "Lucida Console",
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "editor.formatOnPaste": true,
  "editor.glyphMargin": true,
  "editor.inlineSuggest.edits.showCollapsed": true,
  "editor.inlineSuggest.syntaxHighlightingEnabled": true,
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.scale": 2,
  "editor.minimap.size": "fit",
  "editor.mouseWheelZoom": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    80,
    120
  ],
  "editor.snippetSuggestions": "top",
  "editor.stablePeek": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 4,
  
  // Emmet settings: Configures Emmet abbreviations and snippets.
  "emmet.preferences": {
    "filter.commentAfter": " <!-- /[#ID][.CLASS] -->"
  },
  "emmet.syntaxProfiles": {
    "html": {
      "filters": "c"
    }
  },

  // Explorer settings: Configures the file explorer.
  "explorer.compactFolders": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.incrementalNaming": "smart",
  "explorer.openEditors.sortOrder": "alphabetical",

  // Extensions settings: Manages VSCode extensions.
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,

  // Files settings: Configures file handling.
  "files.associations": {
    "*.gs": "javascript"
  },
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Git settings: Configures Git integration.
  "git.autofetch": true,

  // Java settings: Configures Java development environment.
  /** IMPORTANT: ENSURE THESE SETTINGS POINT TO VALID WPILIB
  *   HOME DIRECTORY. MAKE SURE build.gradle CAN IDENTIFY 
  *   THE JVM FOR WPILIB. 
  */
  "java.completion.matchCase": "off",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "{PATH TO WPILIB}/jdk",
      "default": true
    }
  ],
  "java.jdt.ls.java.home": "{PATH TO WPILIB}/jdk",

  // JSON settings: Configures JSON file handling.
  "json.schemas": [
    {
      "fileMatch": [
        "*.jsonc"
      ],
      "schema": {
        "allowTrailingCommas": true
      }
    }
  ],

  // Markdown settings: Configures Markdown support.
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.print.absoluteImgPath": false,
  "markdown.extension.tableFormatter.normalizeIndentation": true,
  "markdown.extension.toc.levels": "1..3",
  "markdown.extension.toc.slugifyMode": "vscode",

  // MarkdownLint settings: Configures Markdown linting.
  "markdownlint.config": {
    "default": true,
    "MD007": {
      "indent": 4
    }
  },

  // Notebook settings: Configures notebook editor.
  "notebook.lineNumbers": "on",

  // Outline settings: Configures the outline view.
  "outline.collapseItems": "alwaysCollapse",

  // Python settings: Configures Python development environment.
  "python.languageServer": "Default",

  // Red Hat settings: Configures Red Hat extensions (e.g., telemetry).
  "redhat.telemetry.enabled": false,

  // SCM settings: Configures source control management.
  "scm.alwaysShowActions": true,
  "scm.defaultViewMode": "tree",

  // Search settings: Configures search functionality.
  "search.smartCase": true,

  // Settings Sync settings: Configures settings synchronization.
  "settingsSync.ignoredExtensions": [
    "wpilibsuite.vscode-wpilib"
  ],

  // Terminal settings: Configures the integrated terminal.
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.env.linux": {
    "JAVA_HOME": "{PATH TO WPILIB}/jdk",
    "PATH": "{PATH TO WPILIB}/jdk/bin:${env:PATH}"
  },
  "terminal.integrated.env.windows": {
    "JAVA_HOME": "{PATH TO WPILIB}/jdk",
    "PATH": "{PATH TO WPILIB}/jdk/bin;%PATH%"
  },
  "terminal.integrated.env.macos": {
    "JAVA_HOME": "{PATH TO WPILIB}/jdk",
    "PATH": "{PATH TO WPILIB}/jdk/bin:${env:PATH}"
  },
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": 400,
  "terminal.integrated.middleClickBehavior": "paste",
  "terminal.integrated.tabStopWidth": 4,

  // To-Do Tree settings: Configures the To-Do Tree extension.
  "todo-tree.general.revealBehaviour": "start of todo",
  "todo-tree.general.statusBar": "tags",
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "REVIEW",
    "NOTE",
    "HELP",
    "MERGE CONFLICT"
  ],
  "todo-tree.highlights.enabled": true,

  // Update settings: Configures VSCode updates.
  "update.mode": "none",
  "update.showReleaseNotes": false,

  // IntelliCode settings: Configures Visual Studio IntelliCode.
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Window settings: Configures the main window.
  "window.commandCenter": false,

  // Workbench settings: Configures the overall workbench appearance and behavior.
  "workbench.commandPalette.preserveInput": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.splitInGroupLayout": "vertical",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.list.horizontalScrolling": true,
  "workbench.list.openMode": "doubleClick",
  "workbench.secondarySideBar.defaultVisibility": "visible",
  "workbench.startupEditor": "newUntitledFile",
  
  // Language-specific settings: Overrides for specific languages.
  "[markdown]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.tabSize": 4,
    "editor.unicodeHighlight.ambiguousCharacters": true,
    "editor.wordWrap": "on"
  },
  "[powershell]": {
    "editor.tabSize": 4,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  },
  "[python]": {
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": "matchingDocuments"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[yml]": {
    "editor.tabSize": 4
  }
}